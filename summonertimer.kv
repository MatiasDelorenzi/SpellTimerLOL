<ErrorWindow>:
    Label:
        text: "This summoner is not currently in a game"
    Button:
        pos_hint: {"x":0.2, "y":0.05}
        size_hint: 0.6, 0.2
        font_size: (root.width**2 + root.height**2) / 13**4
        text: "TRY AGAIN"
        on_release:
            root.manager.transition.direction = "up"
            root.try_again()


<WelcomeWindow>:
    name: "welcome"
    summoner: summoner
    server: server

    FloatLayout:

        Label:
            text:"Summoner name: "
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.1, "top":0.9}
            size_hint: 0.35, 0.15

        TextInput:
            id: summoner
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline:False
            pos_hint: {"x":0.45, "top":0.9}
            size_hint: 0.4, 0.15

        Label:
            text:"Server: "
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.1, "top":0.7}
            size_hint: 0.35, 0.15

        TextInput:
            id: server
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline:False
            pos_hint: {"x":0.45, "top":0.7}
            size_hint: 0.4, 0.15

        Button:
            pos_hint: {"x":0.2, "y":0.05}
            size_hint: 0.6, 0.2
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "GET STARTED!"
            on_release:
                root.manager.transition.direction = "up"
                root.get_user_info()
                root.getStartedBtn()


<GameWindow>:
    FloatLayout:
        Button:
            pos_hint: {"x":0.05, "y":0.85}
            size_hint: None, None
            size: 64, 64
            font_size: (root.width**2 + root.height**2) / 13**4
            on_release:
                root.test_print()




    FloatLayout:

        Button:
            pos_hint: {"x":0.05, "y":0.05}
            size_hint: 0.2, 0.1
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "EXIT"
            on_release:
                root.manager.transition.direction = "down"
                root.exitBtn()









