<ErrorWindow>:
    Label:
        text: "This summoner is not currently in a game"
    Button:
        pos_hint: {"x":0.2, "y":0.05}
        size_hint: 0.6, 0.2
        font_size: (root.width**2 + root.height**2) / 13**4
        text: "TRY AGAIN"
        on_release:
            root.manager.transition.direction = "up"
            root.try_again()

<LoadingWindow>:
    Label:
        text: "Loading..."

<WelcomeWindow>:
    name: "welcome"
    summoner: summoner
    server: server

    FloatLayout:

        TextInput:
            id: summoner
            hint_text: "Enter your summoner name"
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline:False
            pos_hint: {"center_x":0.5, "top":0.8}
            size_hint: 0.7, 0.1

        TextInput:
            hint_text: "Select your server"
            id: server
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline:False
            pos_hint: {"center_x":0.5, "top":0.6}
            size_hint: 0.7, 0.1

        Button:
            pos_hint: {"x":0.2, "y":0.1}
            size_hint: 0.6, 0.15
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "GET STARTED!"
            on_release:
                root.manager.transition.direction = "up"
                root.get_started()


<GameWindow>:
    FloatLayout:
        Button:
            pos_hint: {"x":0.05, "y":0.85}
            size_hint: None, None
            size: 64, 64
            font_size: (root.width**2 + root.height**2) / 13**4
            on_release:
                root.test_print()




    FloatLayout:

        Button:
            pos_hint: {"x":0.05, "y":0.05}
            size_hint: 0.2, 0.1
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "EXIT"
            on_release:
                root.manager.transition.direction = "down"
                root.exitBtn()









