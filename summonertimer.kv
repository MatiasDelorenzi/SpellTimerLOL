<ErrorWindow>:
    Label:
        padding_x: 20
        text_size: self.size
        pos_hint: {"center_x":0.5, "y":0.6}
        font_size: (root.width**2 + root.height**2) / 13**4
        text: "This summoner is not currently in a game or invalid server"
        multiline:True
    Button:
        pos_hint: {"center_x":0.5, "y":0.1}
        size_hint: 0.4, 0.1
        font_size: (root.width**2 + root.height**2) / 13**4
        text: "TRY AGAIN"
        on_release:
            root.manager.transition.direction = "up"
            root.try_again()

<LoadingWindow>:
    Label:
        text:"LOADING..."

<WelcomeWindow>:
    name: "welcome"
    summoner: summoner
    server: server

    FloatLayout:

        TextInput:
            id: summoner
            hint_text: "Enter your summoner name"
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline:False
            pos_hint: {"center_x":0.5, "top":0.8}
            size_hint: 0.7, 0.1

        Spinner:
            hint_text: "Select your server"
            id: server
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline:False
            text: 'Select your server'
            values: 'Latin America South', 'Latin America North', 'Brazil', 'Europe West', 'Europe Nordic & East', 'North America', 'Korea', 'Japan', 'Oceania', 'Russia', 'Turkey'
            pos_hint: {"center_x":0.5, "top":0.6}
            size_hint: 0.7, 0.1

        Button:
            pos_hint: {"center_x":0.5, "center_y":0.1}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "SEARCH"
            on_release:
                root.manager.transition.direction = "up"
                root.get_started()


<GameWindow>:
    background: background
    FloatLayout:
        id: background
        Button:
            pos_hint: {"x":0.05, "y":0.05}
            size_hint: 0.2, 0.1
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "EXIT"










